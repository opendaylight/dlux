<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <bean id="bundle-activator" class="org.opendaylight.controller.dlux.connection_manager.DluxConnectionManager"/>
      <reference id="sampleService" availability="mandatory" activation="eager" interface="org.osgi.service.http.HttpService">
        <reference-listener ref="bundle-activator" bind-method="onBindHttpService" unbind-method="onUnbindHttpService"/>
      </reference>
      <reference id="addModuleService" availability="mandatory" activation="eager" interface="org.opendaylight.controller.dlux.core.api">
        <reference-listener ref="bundle-activator" bind-method="onBindBootService" unbind-method="onUnbindBootService"/>
      </reference>
</blueprint>
