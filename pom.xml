    <modelVersion>4.0.0</modelVersion>
    <groupId>org.opendaylight.dlux</groupId>
    <artifactId>dlux-parent</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <properties>
        <nexusproxy>http://nexus.opendaylight.org/content</nexusproxy>
	<loader.version>1.0.0-SNAPSHOT</loader.version>
        <loader.resources.version>0.0.1-SNAPSHOT</loader.resources.version>
        <core.resources.version>0.0.1-SNAPSHOT</core.resources.version>
        <node.resources.version>0.0.1-SNAPSHOT</node.resources.version>
	<common.general.resources.version>0.0.1-SNAPSHOT</common.general.resources.version>
	<common.navigation.resources.version>0.0.1-SNAPSHOT</common.navigation.resources.version>
	<common.layout.resources.version>0.0.1-SNAPSHOT</common.layout.resources.version>
	<common.topbar.resources.version>0.0.1-SNAPSHOT</common.topbar.resources.version>
    </properties>
    <name>DLUX</name>
    <modules>
	<module>modules</module>
	<module>dlux-web</module>
    </modules>
    <repositories>
    <!-- Opendaylight public group -->
    <repository>
      <id>opendaylight-public</id>
      <name>opendaylight-public</name>
      <url>${nexusproxy}/groups/public/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
    </repository>
    <!-- OpenDayLight Released artifact -->
    <repository>
      <id>opendaylight-release</id>
      <name>opendaylight-release</name>
      <url>http://nexus.opendaylight.org/content/repositories/opendaylight.release/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
    <!-- OpenDayLight Snapshot artifact -->
    <repository>
      <id>opendaylight-snapshot</id>
      <name>opendaylight-snapshot</name>
      <url>http://nexus.opendaylight.org/content/repositories/opendaylight.snapshot/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
  </repositories>

  <pluginRepositories>
    <!-- Opendaylight public group -->
